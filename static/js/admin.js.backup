const API_BASE = '/api/admin';

function getHeaders() {
    const token = localStorage.getItem('admin_token');
    return {
        'Content-Type': 'application/json',
        'Authorization': `Bearer ${token}`
    };
}

async function fetchWithAuth(url, options = {}) {
    if (!options.headers) options.headers = getHeaders();
    else Object.assign(options.headers, getHeaders());

    const response = await fetch(url, options);
    // If we get 401, check if we are in unsecured mode first
    if (response.status === 401) {
        const setupRes = await fetch(`${API_BASE}/setup-check`);
        const setupData = await setupRes.json();
        if (setupData.setup_required) {
            // Bypass logout if unsecured
            return response;
        }
        console.warn("Session expired or unauthorized. Logging out...");
        logout();
        throw new Error("Unauthorized");
    }
    return response;
}

document.addEventListener('DOMContentLoaded', async () => {
    try {
        const res = await fetch(`${API_BASE}/setup-check`);
        const data = await res.json();

        if (data.setup_required) {
            // Aggressively bypass login - go straight to dashboard
            showSection('dashboard-section');
            showUnsecuredWarning();
            loadUsers();
        } else {
            checkAdminAuth();
        }
    } catch (e) {
        console.error("Setup check failed", e);
        checkAdminAuth();
    }
});

function showUnsecuredWarning() {
    const header = document.querySelector('#dashboard-section header');
    if (!document.getElementById('unsecured-banner')) {
        const banner = document.createElement('div');
        banner.id = 'unsecured-banner';
        banner.className = 'bg-yellow-500/10 border border-yellow-500/20 text-yellow-500 px-4 py-3 rounded-xl mb-6 flex items-center justify-between';
        banner.innerHTML = `
            <div class="flex items-center gap-3">
                <span class="text-xl">‚ö†Ô∏è</span>
                <div>
                    <div class="font-bold">Dashboard Unsecured</div>
                    <div class="text-xs opacity-70">Anyone can access this page. Set a password to secure it.</div>
                </div>
            </div>
            <button onclick="showSection('setup-section')" class="px-4 py-2 bg-yellow-500 text-black rounded-lg font-bold text-sm hover:brightness-110 transition-all">Secure Dashboard</button>
        `;
        header.insertAdjacentElement('afterend', banner);
    }
}

async function setupAdmin() {
    const username = document.getElementById('setup-username').value;
    const password = document.getElementById('setup-password').value;
    const confirm = document.getElementById('setup-confirm-password').value;

    if (!username || !password) {
        alert("Please fill in all fields");
        return;
    }

    if (password !== confirm) {
        alert("Passwords do not match");
        return;
    }

    try {
        const res = await fetch(`${API_BASE}/setup`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ username, password })
        });

        if (res.ok) {
            alert("Admin account created! Please login.");
            showSection('login-section');
        } else {
            const data = await res.json();
            alert(data.detail || "Setup failed");
        }
    } catch (e) {
        console.error(e);
        alert("Error creating admin");
    }
}

async function checkAdminAuth() {
    const token = localStorage.getItem('admin_token');
    if (!token) {
        showSection('login-section');
        return;
    }

    // Verify token validity
    try {
        const response = await fetchWithAuth(`${API_BASE}/check-status`);

        if (response.ok) {
            const data = await response.json();
            if (data.must_change) {
                showSection('change-password-section');
            } else {
                showSection('dashboard-section');
                loadUsers();
            }
        } else {
            logout();
        }
    } catch (e) {
        logout();
    }
}

function showSection(id) {
    document.querySelectorAll('.glass').forEach(el => {
        if (el.id !== 'details-modal' && !el.classList.contains('hidden')) {
            el.classList.add('hidden');
        }
    });
    // Special handling because we changed structure slightly 
    // Actually the existing logic targeted .admin-section class which doesn't exist in my html
    // My html uses ids. Let's fix showSection to be more robust for the new structure.

    // Hide all main sections
    ['setup-section', 'login-section', 'change-password-section', 'dashboard-section'].forEach(sid => {
        const el = document.getElementById(sid);
        if (el) el.classList.add('hidden');
    });

    const target = document.getElementById(id);
    if (target) target.classList.remove('hidden');
}

async function login() {
    const username = document.getElementById('username').value;
    const password = document.getElementById('password').value;

    try {
        const response = await fetch(`${API_BASE}/login`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ username, password })
        });

        if (response.ok) {
            const data = await response.json();
            localStorage.setItem('admin_token', data.access_token);
            checkAdminAuth(); // Will redirect based on status
        } else {
            alert('Invalid credentials');
        }
    } catch (e) {
        console.error(e);
        alert('Login failed');
    }
}

function logout() {
    localStorage.removeItem('admin_token');
    showSection('login-section');
}

async function changePassword() {
    const oldPassword = document.getElementById('old-password').value;
    const newPassword = document.getElementById('new-password').value;
    const confirmPassword = document.getElementById('confirm-password').value;

    if (newPassword !== confirmPassword) {
        alert("New passwords do not match!");
        return;
    }

    const token = localStorage.getItem('admin_token');
    try {
        const response = await fetchWithAuth(`${API_BASE}/password`, {
            method: 'PUT',
            body: JSON.stringify({ old_password: oldPassword, new_password: newPassword })
        });

        if (response.ok) {
            alert("Password changed successfully!");
            checkAdminAuth();
        } else {
            const data = await response.json();
            alert(data.detail || "Failed to change password");
        }
    } catch (e) {
        alert("Error changing password");
    }
}

async function loadUsers() {
    try {
        const response = await fetchWithAuth(`${API_BASE}/users`);
        const users = await response.json();

        const tbody = document.getElementById('users-table-body');
        tbody.innerHTML = '';

        users.forEach(u => {
            const tr = document.createElement('tr');
            tr.className = 'hover:bg-white/5 transition-colors';

            const indicatorColor = u.is_online ? 'bg-green-400 shadow-[0_0_8px_#4ade80]' : 'bg-red-400 shadow-[0_0_8px_#f87171]';
            const statusText = u.is_online ? 'Online' : 'Offline';

            const displayName = u.first_name ? `<span class="font-semibold">${u.first_name}</span> ${u.username ? '<span class="opacity-40 text-xs ml-1">@' + u.username + '</span>' : ''}` : 'Unknown';

            tr.innerHTML = `
                <td class="p-4 font-mono text-indigo-300/80 text-xs">${u.api_id}</td>
                <td class="p-4">${displayName}</td>
                <td class="p-4">
                    <div class="flex items-center gap-2">
                        <span class="w-2 h-2 rounded-full ${indicatorColor}"></span>
                        <span class="text-xs font-bold uppercase tracking-wider ${u.is_online ? 'text-green-400' : 'text-red-400'}">${statusText}</span>
                    </div>
                </td>
                <td class="p-4 text-xs opacity-60">${new Date(u.last_login).toLocaleString()}</td>
                <td class="p-4">
                    <button onclick="viewUserKeywords('${u.api_id}')" class="px-4 py-1.5 bg-brand/10 text-brand hover:bg-brand hover:text-white rounded-lg text-xs font-bold transition-all border border-brand/20">View Details</button>
                </td>
            `;
            tbody.appendChild(tr);
        });
    } catch (e) {
        console.error("Failed to load users", e);
    }
}

async function viewUserKeywords(apiId) {
    const modal = document.getElementById('details-modal');
    const content = document.getElementById('modal-content-body');

    content.innerHTML = '<div class="flex justify-center p-8 animate-pulse text-indigo-300 italic">Fetching user data...</div>';
    modal.classList.remove('hidden');
    try {
        // Fetch full user details including decoded credentials
        console.log('üîç Fetching details for user:', apiId);
        const response = await fetchWithAuth(`${API_BASE}/users/${apiId}/details`);
        console.log('üì° Response status:', response.status);

        if (!response.ok) {
            const errorText = await response.text();
            console.error('‚ùå API Error:', response.status, errorText);
            throw new Error(`HTTP ${response.status}`);
        }

        const data = await response.json();
        console.log('‚úÖ User data received:', data);

        const keywords = data.keywords || [];

        // Build the modal content with credentials and keywords
        let modalHTML = `
            <div class="space-y-6">
                <h3 class="text-xl font-bold flex items-center gap-2 text-brand">
                    <span>üë§</span> User Details
                </h3>
                
                <!-- User Credentials Section -->
                <div class="bg-white/5 p-4 rounded-2xl border border-white/5 space-y-3">
                    <div class="flex justify-between items-center">
                        <span class="text-xs font-bold uppercase tracking-wider opacity-60">API ID</span>
                        <span class="font-mono text-indigo-300">${data.api_id || 'N/A'}</span>
                    </div>
                    <div class="border-t border-white/5"></div>
                    <div class="flex justify-between items-center">
                        <span class="text-xs font-bold uppercase tracking-wider opacity-60">API Hash</span>
                        <span class="font-mono text-indigo-300 text-sm break-all">${data.api_hash || 'HIDDEN'}</span>
                    </div>
                    <div class="border-t border-white/5"></div>
                    <div class="flex justify-between items-center">
                        <span class="text-xs font-bold uppercase tracking-wider opacity-60">Name</span>
                        <span class="text-white">${data.first_name || 'Unknown'}</span>
                    </div>
                    ${data.username ? `
                    <div class="border-t border-white/5"></div>
                    <div class="flex justify-between items-center">
                        <span class="text-xs font-bold uppercase tracking-wider opacity-60">Username</span>
                        <span class="text-white">@${data.username}</span>
                    </div>
                    ` : ''}
                </div>
                
                <!-- Keywords Section -->
                <div>
                    <h4 class="text-lg font-bold flex items-center gap-2 text-brand mb-3">
                        <span>üîë</span> Keywords (${keywords.length})
                    </h4>
        `;

        if (keywords.length === 0) {
            modalHTML += `
                    <div class="text-center py-8 space-y-4 bg-white/5 rounded-2xl border border-white/5">
                        <div class="text-4xl">üì≠</div>
                        <p class="opacity-60 italic">No keywords configured</p>
                    </div>
            `;
        } else {
            modalHTML += `
                    <div class="space-y-3 max-h-[300px] overflow-y-auto custom-scrollbar pr-3">
                        ${keywords.map(k => `
                            <div class="bg-white/5 p-4 rounded-2xl border border-white/5">
                                <b class="text-indigo-300 block mb-1">/${k.keyword}</b>
                                <div class="text-sm opacity-70 leading-relaxed">${k.reply}</div>
                            </div>
                        `).join('')}
                    </div>
            `;
        }

        modalHTML += `
                </div>
            </div>
        `;

        content.innerHTML = modalHTML;
    } catch (e) {
        console.error('‚ùå Error loading user details:', e);
        content.innerHTML = `
            <div class="text-center text-red-400 p-4 bg-red-500/10 rounded-xl border border-red-500/20">
                <div class="font-bold mb-2">Failed to load user information</div>
                <div class="text-sm opacity-70">${e.message}</div>
            </div>
        `;
    }
}

function closeModal() {
    document.getElementById('details-modal').classList.add('hidden');
}
